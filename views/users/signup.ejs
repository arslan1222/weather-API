<%- layout("/layouts/boilerplate")%>

    <div class="row mt-3">
        <h2 class="col-6 offset-3"><span class="signup">Sign up</span> For Home Page</h2> 
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <!-- Username field -->
                <lable for="username" class="form-label">Username</lable>
                <input 
                name="username" 
                id="username"
                type="text" 
                class="form-control" 
                required>
                <div class="valid-feedback">Looks good!</div>
                <!-- Email field -->
                <lable for="email" class="form-label">Email</lable>
                <input 
                name="email" 
                id="email"
                type="email" 
                class="form-control" 
                required>
                <!-- Password field -->
                <lable for="password" class="form-label">Password</lable>
                <input 
                name="password" 
                id="password"
                type="password" 
                class="form-control" 
                required>
                <button class="btn btn-success mt-3">Sign up</button>
            </form>
            
            
    </div>
    </div>